@{
    ViewBag.Title = "Unsuspend";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="jumbotron">
    <p>
        @Html.ActionLink("<< Manage Users", "ManageUsers")
    </p>
    <h2>Unsuspend A User</h2>
    @if (ViewBag.Message != null)
    {
        string message = ViewBag.Message;
        @message;
    }
    @using (Html.BeginForm("UnsuspendUser", "Admin"))
    {
        <fieldset>
            @Html.Label("Users")
            @Html.DropDownList("Users")
            <input type="submit" value="Unsuspend User" />
        </fieldset>
    }
    @Html.ActionLink("Suspend Users", "Suspend")
</div>