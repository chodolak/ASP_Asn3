
@{
    ViewBag.Title = "Add New Role";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="jumbotron">
    <p>
        @Html.ActionLink("<< Manage Roles", "ManageRoles")
    </p>
    <h2>Add New Role</h2>
    @if (ViewBag.Message != null)
    {
        string message = ViewBag.Message;
        @message;
    }
    <p>
        @using (Html.BeginForm("AddNewRoleCommit", "Admin"))
        {
            <fieldset>
                @Html.Label("New Role: ")
                @Html.TextBox("Role")
                <input type="submit" value="Add new role" />
            </fieldset>
            
        }
    </p>
    @Html.ActionLink("Remove Roles", "RemoveExistingRole")
</div>