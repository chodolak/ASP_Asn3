<script>
    $(document).ready(function () {
        $('#smartdataform').hide();

        if ($('#ProgramId :selected').text() == 'SMART') {
            $('#smartdataform').show();
        } else {
            $('#smartdataform').hide();
        }

        $('#ProgramId').change(function () {
            if ($('#ProgramId :selected').text() == 'SMART') {
                $('#smartdataform').show();
            } else {
                $('#smartdataform').hide();
            }
        });
    });
</script>


